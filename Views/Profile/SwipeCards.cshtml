<!DOCTYPE html>
<html>
<head>
    <title>Swipe Cards</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        #cardContainer {
            width: 300px;
            height: 400px;
            position: relative;
        }

        .card {
            width: 100%;
            height: 100%;
            position: absolute;
            background-color: lightgray;
            border: 1px solid black;
            cursor: grab;
        }
    </style>
</head>
<body>
    <div id="cardContainer">
        <div class="card" id="card1">Card 1</div>
        <div class="card" id="card2">Card 2</div>
        <div class="card" id="card3">Card 3</div>
    </div>

    <script>
        $(document).ready(function () {
            var initialX, initialY;

            $(".card").mousedown(function (e) {
                initialX = e.pageX;
                initialY = e.pageY;

                $(document).mousemove(function (e) {
                    var dx = e.pageX - initialX;
                    var dy = e.pageY - initialY;

                    $(e.target).css('left', dx + 'px');
                    $(e.target).css('top', dy + 'px');
                });
            });

            $(document).mouseup(function () {
                $(document).off("mousemove");
            });
        });
    </script>
</body>
</html>
