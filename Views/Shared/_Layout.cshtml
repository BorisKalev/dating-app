@using ProjFinRBEM.Helpers;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doovoo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjFinRBEM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @{
                    try
                    {
                        User user = SessionHelper.GetObjectFromJson<User>(Context.Session, "CurrentUser");
                        if (user.TypeOfUser == "Admin")
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="HomeAdmin">DꝊꝊᕓꝊꝊ></a>
                        }
                        else if(user.TypeOfUser == "MembreP")
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="MembreP" asp-action="Index">DꝊꝊᕓꝊꝊ></a>
                        }
                        else if (user.TypeOfUser == "MembreR")
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="MembreR" asp-action="Index">DꝊꝊᕓꝊꝊ></a>
                        }
                        else if(user.TypeOfUser == "Invite")
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="Users" asp-action="Index">DꝊꝊᕓꝊꝊ></a>
                        }

                        else
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DꝊꝊᕓꝊꝊ></a>
                        }
                    }
                    catch(Exception e)
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Index">DꝊꝊᕓꝊꝊ></a>
                    }
                    

                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            try
                            {
                                User user = SessionHelper.GetObjectFromJson<User>(Context.Session, "CurrentUser");
                                
                                if (user.TypeOfUser == "Admin")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="HomeAdmin">Menu Admin</a>
                                    </li>


                                }
                                if (user.TypeOfUser == "Invite")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Home</a>
                                    </li>


                                }
                                if (user.TypeOfUser == "MembreR")
                                {
                                    
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="MembreR" asp-action="Index">Home</a>
                                    </li>

                                   
                                    <li>
                                        <a class="nav-link" asp-controller="Profile" asp-action="Index" >Edit Profile</a>
                                    </li>
                                    <li>
                                        <a class="nav-link">Messagerie</a>
                                    </li>
                                    <li>
                                        <a class="nav-link">Likes</a>
                                    </li>



                                }
                                if (user.TypeOfUser == "MembreP")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="MembreP" asp-action="Index">Home</a>
                                    </li>


                                   
                                    <li>
                                        <a class="nav-link" asp-controller="Profile" asp-action="Index">Edit Profile</a>
                                    </li>
                                    <li>
                                        <a class="nav-link">Messagerie</a>
                                    </li>
                                    <li>
                                        <a class="nav-link">Likes</a>
                                    </li>


                                }
                            }
                            catch (NullReferenceException)
                            {
                                
                            }
                            
                            

                        }
                        
                        


                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li>
                            <a class="nav-link" asp-controller="account" asp-action="logout">Déconnexion</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container2">
            &copy; 2023 - Doovoo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
