@using ProjFinRBEM.Helpers;
@model IEnumerable<ProjFinRBEM.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Les utilisateurs actifs sur Doovoo</h1>
@{
    User user = SessionHelper.GetObjectFromJson<User>(Context.Session, "CurrentUser");
    if (user.TypeOfUser == "Admin")
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
}
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)

            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>




            @{
                if (user.TypeOfUser == "Admin")
                {
                    <th>
                        @Html.DisplayNameFor(model => model.TypeOfUser)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                }
           }
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (user.TypeOfUser == "Admin")
            {
                @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
                }
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                             <img src="@Html.DisplayFor(modelIteml => item.ProfileImage)">
                        </td>
                       

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        
                        
                    </tr>
                }
        }

        }

    </tbody>
</table>
